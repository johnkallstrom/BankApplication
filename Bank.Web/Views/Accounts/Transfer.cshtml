@model CreateTransferViewModel

@{
    ViewData["Title"] = $"Transfer - Account {Model.FromAccountId}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="transaction">
    <div class="container">
        <div class="wrapper">
            <div>
                <h1>Transfer</h1>
            </div>
            <form asp-controller="Accounts" asp-action="Transfer" method="post">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="@Model.FromAccountId" />

                <div class="form-group">
                    <label asp-for="@Model.Balance"></label>
                    <input type="text" value="@Model.DisplayBalance" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.FromAccountId"></label>
                    <input type="text" value="@Model.FromAccountId" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ToAccountId"></label>
                    <input type="text" asp-for="@Model.ToAccountId" value="@string.Empty" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Amount"></label>
                    <input type="text" asp-for="@Model.Amount" value="@string.Empty" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Transfer" />
                    <a asp-controller="Accounts" asp-action="AccountDetails" asp-route-id="@Model.FromAccountId">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>