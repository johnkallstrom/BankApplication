@model LoginViewModel

@{
    ViewData["Title"] = "Bank - Sign in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="users">
    <h4>Sign in</h4>
    <form asp-controller="Users" asp-action="Login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input asp-for="@Model.Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Enter password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>