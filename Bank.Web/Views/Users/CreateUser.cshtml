@model CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="users">
    <h4>Create User</h4>
    <form asp-controller="Users" asp-action="CreateUser" method="post">
        <div class="form-group">
            <label>Email</label>
            <input asp-for="@Model.Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Enter password">
        </div>
        <div class="form-group">
            <label>Role</label>
            <select class="form-control" asp-items="@Model.RoleOptions" asp-for="@Model.Role"></select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Users" asp-action="Index" class="btn btn-primary">Back</a>
    </form>
</div>