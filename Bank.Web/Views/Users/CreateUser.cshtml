@model CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="create-user">
    <div class="container">
        <div class="wrapper">
            <div>
                <h1>Create user</h1>
            </div>
            <form asp-controller="Users" asp-action="CreateUser" method="post" >
                <div asp-validation-summary="All"></div>

                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input type="text" asp-for="@Model.Email" class="create-user-input" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input type="password" asp-for="@Model.Password" class="create-user-input" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Role"></label>
                    <select asp-items="@Model.RoleOptions" asp-for="@Model.Role"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>
</div>

