@model UserProfileViewModel

@{
    ViewData["Title"] = $"User Profile - {Model.Email}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="user-profile">
    <div class="container">
        <div class="wrapper">
            <h1>User Profile</h1>

            <div class="profile-group">
                <strong>ID</strong>
                <p>@Model.UserId</p>
            </div>

            <div class="profile-group">
                <strong>Username</strong>
                <p>@Model.Username</p>
            </div>

            <div class="profile-group">
                <strong>Email</strong>
                <p>@Model.Email</p>
            </div>

            <div class="profile-group">
                <strong>Role</strong>
                <p>@Model.Role</p>
            </div>

            <div class="options">
                <div class="option-group">
                    <a asp-controller="Users" asp-action="EditUser" asp-route-id="@Model.UserId">Edit</a>
                </div>
                <div class="option-group">
                    <a asp-controller="Users" asp-action="DeleteUser" asp-route-id="@Model.UserId">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>



