@model EditUserViewModel

@{
    ViewData["Title"] = "Edit user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="edit-user">
    <div class="container">
        <div class="wrapper">
            <div>
                <h1>Edit user</h1>
            </div>
            <form asp-controller="User" asp-action="EditUser" method="post">
                <div asp-validation-summary="All"></div>

                <input type="hidden" asp-for="@Model.UserId" />

                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input type="email" asp-for="@Model.Email" class="edit-user-input" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input type="password" asp-for="@Model.Password" class="edit-user-input" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.CurrentRole"></label>
                    <input type="text" asp-for="@Model.CurrentRole" readonly class="user-current-role" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NewRole"></label>
                    <select asp-items="@Model.RoleOptions" asp-for="@Model.NewRole"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" />
                </div>
            </form>
        </div>
    </div>
</div>



