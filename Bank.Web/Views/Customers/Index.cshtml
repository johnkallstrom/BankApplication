@model CustomerSearchViewModel

@{
    ViewData["Title"] = "Bank - Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="customers">
    <h4>Customers</h4>
    <a asp-controller="Customers" asp-action="CreateCustomer" class="btn btn-primary mb-3">New</a>
    <form class="form-inline mb-3">
        <input asp-for="@Model.SearchString" type="text" class="form-control w-100" placeholder="Search customer by name and city">
        <button type="submit" class="btn btn-primary my-1">Search</button>
    </form>
    @if (Model.DisplaySearchError())
    {
        <h4 class="text-center">No search results found.</h4>
    }
    else
    {
        <table class="table table-bordered table-responsive-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">Country</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            @foreach (var customer in Model.Customers)
            {
                <tbody>
                    <tr>
                        <td>@customer.Fullname</td>
                        <td>@customer.Address</td>
                        <td>@customer.City</td>
                        <td>@customer.Country</td>
                        <td>
                            <a asp-controller="Customers"
                               asp-action="CustomerProfile"
                               asp-route-id="@customer.CustomerId">Details</a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
        <nav aria-label="...">
            <ul class="pagination">
                @if (Model.DisplayPrevButton())
                {
                    <li class="page-item">
                        <a onclick="window.location.href=updateQueryStringParameter(window.location.href, 'currentPage', '@(Model.CurrentPage - 1)')" class="page-link">Previous</a>
                    </li>
                }

                @if (Model.DisplayNextButton())
                {
                    <li class="page-item">
                        <a onclick="window.location.href=updateQueryStringParameter(window.location.href, 'currentPage', '@(Model.CurrentPage + 1)')" class="page-link">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
