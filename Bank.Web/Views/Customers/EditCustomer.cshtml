@model EditCustomerViewModel

@{
    ViewData["Title"] = $"Edit - {Model.FirstName} {Model.LastName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="edit-customer">
    <div class="container">
        <div class="wrapper">
            <div>
                <h1>Edit customer</h1>
            </div>
            <form asp-controller="Customers" asp-action="EditCustomer" method="post">
                <div asp-validation-summary="All"></div>

                <input type="hidden" asp-for="@Model.CustomerId" />
                <input type="hidden" asp-for="@Model.PhoneCountryCode" />
                <input type="hidden" asp-for="@Model.CountryCode" />

                <div class="form-group">
                    <label asp-for="@Model.FirstName"></label>
                    <input type="text" asp-for="@Model.FirstName" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.LastName"></label>
                    <input type="text" asp-for="@Model.LastName" />
                </div>

                <div class="radio-group">
                    <input type="radio" asp-for="@Model.Gender" value="Male" checked="checked" />
                    <label>Male</label>
                </div>

                <div class="radio-group">
                    <input type="radio" asp-for="@Model.Gender" value="Female" />
                    <label>Female</label>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input type="email" asp-for="@Model.Email" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Phone"></label>
                    <input type="text" asp-for="@Model.Phone" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Birthday"></label>
                    <input type="date" asp-for="@Model.Birthday" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Address"></label>
                    <input type="text" asp-for="@Model.Address" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.PostalCode"></label>
                    <input type="number" asp-for="@Model.PostalCode" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.City"></label>
                    <input type="text" asp-for="@Model.City" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Country"></label>
                    <select asp-items="@Model.CountryOptions" asp-for="@Model.Country"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" />
                    <a asp-controller="Customers" asp-action="CustomerProfile" asp-route-id="@Model.CustomerId">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

