@model CreateCustomerViewModel

@{
    ViewData["Title"] = "Create Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="customers">
    <h4>Create Customer</h4>
    <form asp-controller="Customers" asp-action="CreateCustomer" method="post">
        <div class="form-group">
            <label asp-for="@Model.FirstName"></label>
            <input type="text" asp-for="@Model.FirstName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.LastName"></label>
            <input type="text" asp-for="@Model.LastName" class="form-control" />
        </div>

        <div class="form-check">
            <input asp-for="@Model.Gender" class="form-check-input" type="radio" value="Male">
            <label class="form-check-label">Male</label>
        </div>

        <div class="form-check">
            <input asp-for="@Model.Gender" class="form-check-input" type="radio" value="Female">
            <label class="form-check-label">Female</label>
        </div>


        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <input type="email" asp-for="@Model.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Phone"></label>
            <input type="text" asp-for="@Model.Phone" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Birthday"></label>
            <input type="date" asp-for="@Model.Birthday" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Address"></label>
            <input type="text" asp-for="@Model.Address" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.PostalCode"></label>
            <input type="number" asp-for="@Model.PostalCode" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.City"></label>
            <input type="text" asp-for="@Model.City" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Country"></label>
            <select asp-items="@Model.CountryOptions" asp-for="@Model.Country" class="form-control"></select>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Customers" asp-action="Index" class="btn btn-primary">Back</a>
    </form>
</div>

