@model CreateDepositViewModel

@{
    ViewData["Title"] = "Deposit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="transaction">
    <div class="container">
        <div class="wrapper">
            <div>
                <h1>Deposit</h1>
            </div>
            <form asp-controller="Account" asp-action="Deposit" method="post">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="@Model.AccountId" />

                <div class="form-group">
                    <label asp-for="@Model.Balance"></label>
                    <input type="text" value="@Model.DisplayBalance" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.AccountId"></label>
                    <input type="text" value="@Model.AccountId" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Amount"></label>
                    <input type="text" asp-for="@Model.Amount" value="@string.Empty" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Deposit" />
                </div>
            </form>
        </div>
        <div class="return-wrapper">
            <a asp-controller="Account" asp-action="AccountDetails" asp-route-id="@Model.AccountId">Back</a>
        </div>
    </div>
</div>

