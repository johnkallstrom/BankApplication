@model CreateTransferViewModel

@{
    ViewData["Title"] = "Transfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="transaction">
    <div class="container">
        <div class="wrapper">
            <div>
                <h1>Transfer</h1>
            </div>
            <form asp-controller="Account" asp-action="Withdrawal" method="post" id="form">

                <input type="hidden" asp-for="@Model.FromAccountId" />

                <div class="form-group">
                    <label asp-for="@Model.FromAccountId"></label>
                    <span asp-validation-for="@Model.FromAccountId"></span>
                    <input type="text" value="Account #@Model.FromAccountId" class="account-number" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ToAccountId"></label>
                    <span asp-validation-for="@Model.ToAccountId"></span>
                    <input type="text" asp-for="@Model.ToAccountId" />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Amount"></label>
                    <span asp-validation-for="@Model.Amount"></span>
                    <input type="text" asp-for="@Model.Amount" id="input" maxlength="15" required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Transfer" />
                </div>
            </form>
        </div>
    </div>
</div>