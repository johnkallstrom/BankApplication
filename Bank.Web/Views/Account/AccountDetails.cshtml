@model AccountDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="account-details">
    <div class="container">
        <div class="account">
            <h1>Account details</h1>

            <div class="account-group">
                <strong>Number</strong>
                <p>@Model.AccountId</p>
            </div>

            <div class="account-group">
                <strong>Balance</strong>
                <p>@Model.DisplayBalance</p>
            </div>

            <div class="account-group">
                <strong>Created</strong>
                <p>@Model.DisplayCreated</p>
            </div>

            <div class="options">
                <div class="option-group">
                    <a asp-controller="Account" asp-action="Deposit" asp-route-id="@Model.AccountId">Deposit</a>
                </div>

                <div class="option-group">
                    <a asp-controller="Account" asp-action="Withdrawal" asp-route-id="@Model.AccountId">Withdrawal</a>
                </div>

                <div class="option-group">
                    <a asp-controller="Account" asp-action="Transfer" asp-route-id="@Model.AccountId">Transfer</a>
                </div>
            </div>
        </div>
        <div class="transaction-list">
            <h1>Transactions</h1>
            <table id="transactions-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.DisplayDate</td>
                            <td>@transaction.Type</td>
                            <td>@transaction.DisplayAmount</td>
                            <td>@transaction.DisplayBalance</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="button-wrapper">
                <button onclick="loadTransactions(@Model.AccountId)">View more</button>
            </div>
        </div>
    </div>
</div>

<script>
    var startPos = 0;
    function loadTransactions(id) {
        startPos += 20;
        var url = `/Account/LoadTransactions?id=${id}&startPosition=${startPos}`;
        fetch(url).then(res => res.text()).then(data => {
            $('#transactions-table > tbody:last-child').append(data);
        });
    };
</script>