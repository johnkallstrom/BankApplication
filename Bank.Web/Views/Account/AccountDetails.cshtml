@model AccountDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="account-details">
    <div class="container">
        <div class="account">
            <h1>Account details</h1>

            <div class="account-group">
                <strong>Number</strong>
                <p>@Model.AccountId</p>
            </div>

            <div class="account-group">
                <strong>Balance</strong>
                <p>@Model.DisplayBalance</p>
            </div>

            <div class="account-group">
                <strong>Created</strong>
                <p>@Model.DisplayCreated</p>
            </div>

            <div class="options">
                <div class="option-group">
                    <a asp-controller="Account" asp-action="Deposit" asp-route-id="@Model.AccountId">Deposit</a>
                </div>

                <div class="option-group">
                    <a asp-controller="Account" asp-action="Withdrawal" asp-route-id="@Model.AccountId">Withdrawal</a>
                </div>

                <div class="option-group">
                    <a asp-controller="Account" asp-action="Transfer" asp-route-id="@Model.AccountId">Transfer</a>
                </div>
            </div>
        </div>
        <div class="transaction-list">
            <h1>Transactions</h1>
            <table id="transactions-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.DisplayDate</td>
                            <td>@transaction.Type</td>
                            <td>@transaction.DisplayAmount</td>
                            <td>@transaction.DisplayBalance</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="pagination">
                @if (Model.EnablePrevButton())
                {
                    <a asp-controller="Account"
                       asp-action="Previous"
                       asp-route-id="@Model.AccountId"
                       asp-route-currentPage="@(Model.CurrentPage - 1)"
                       data-ajax="true"
                       data-ajax-method="GET"
                       data-ajax-mode="replace"
                       data-ajax-update=".transaction-list">&laquo;</a>
                }
                else
                {
                    <a class="disabled">&laquo;</a>
                }
                @if (Model.EnableNextButton())
                {
                    <a asp-controller="Account"
                       asp-action="Next"
                       asp-route-id="@Model.AccountId"
                       asp-route-currentPage="@(Model.CurrentPage + 1)"
                       data-ajax="true"
                       data-ajax-method="GET"
                       data-ajax-mode="replace"
                       data-ajax-update=".transaction-list">&raquo;</a>
                }
                else
                {
                    <a class="disabled">&raquo;</a>
                }
            </div>
        </div>
    </div>
</div>