@model CountryStatisticsViewModel

<table class="table table-bordered table-responsive-sm">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Country</th>
            <th scope="col">Customers</th>
            <th scope="col">Accounts</th>
            <th scope="col">Balance</th>
            <th scope="col">View</th>
        </tr>
    </thead>
    @foreach (var country in Model.Countries)
    {
    <tbody>
        <tr>
            <td>@country.Country</td>
            <td>@country.TotalCustomers</td>
            <td>@country.TotalAccounts</td>
            <td>@country.DisplayTotalBalance</td>
            <td>
                <a asp-controller="Customers"
                   asp-action="TopCustomers"
                   asp-route-country="@country.Country">View</a>
            </td>
        </tr>
    </tbody>
    }
</table>