@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <nav>
        <ul>
            <li><a asp-controller="User" asp-action="Logout">Sign out</a></li>
        </ul>
    </nav>
}
else
{
    <nav>
        <ul>
            <li><a asp-controller="User" asp-action="Login">Sign in</a></li>
        </ul>
    </nav>
}
