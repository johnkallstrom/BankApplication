@model BankStatisticsViewModel

<section id="statistics">
    <div class="container">
        <div class="wrapper">
            <div class="statistics-header">
                <h1>Statistics</h1>
            </div>
            <div class="statistics-group">
                <span>Total customers: </span>
                <h3>@Model.TotalCustomersAmount</h3>
            </div>
            <div class="statistics-group">
                <span>Total accounts: </span>
                <h3>@Model.TotalAccountsAmount</h3>
            </div>
            <div class="statistics-group">
                <span>Total balance: </span>
                <h3>@Model.DisplayTotalBalance</h3>
            </div>
        </div>
    </div>
</section>